# Environment Configuration for MLOps Customer Churn Prediction
# ===========================================================

# Application Settings
APP_NAME=customer-churn-prediction
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=mlflow
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# MLflow Configuration
MLFLOW_TRACKING_URI=postgresql://postgres:password@postgres:5432/mlflow
MLFLOW_ARTIFACT_ROOT=s3://your-mlflow-bucket/artifacts/
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET=your-mlflow-bucket

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Web Application Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
STREAMLIT_PORT=8501

# Model Configuration
MODEL_NAME=churn-prediction-model
MODEL_STAGE=Production
BATCH_SIZE=1000
PREDICTION_THRESHOLD=0.5

# Security Configuration
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Configuration
MAX_WORKERS=4
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Monitoring Thresholds
DRIFT_THRESHOLD=0.1
PERFORMANCE_THRESHOLD=0.8
ALERT_EMAIL=alerts@yourcompany.com
